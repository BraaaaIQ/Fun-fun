#include <bits/stdc++.h>
using namespace std;

int main() {
    long long tienCuoc;
    string taixiu;
    cout <<"Welcome to top 1 gambling website TAIXIU69!" << endl;
    cout << "Insert the money: ";
    cin >> tienCuoc;
    for (long long i = 0; i <= tienCuoc; i++) {
        cout << "How much you want to bet: ";
        cin >> i;
        if (i > tienCuoc) {
            cout << "You don't have that much money!";
        }
        else {
            cout << "Tai or Xiu: ";
                cin >> taixiu;
                srand(time(0));
                int randomNumber1 = rand() % 6 + 1;
                int randomNumber2 = rand() % 6 + 1;
                int randomNumber3 = rand() % 6 + 1;
                cout << randomNumber1 << endl;
                cout << randomNumber2 << endl;
                cout << randomNumber3 << endl;
                if (taixiu == "Tai") {
                    if (randomNumber1 + randomNumber2 + randomNumber3 >= 10) {
                        cout << "Congrats! It's Tai" << endl;
                        tienCuoc += i;
                        cout << "Your money is now: " << tienCuoc << endl;
                    }
                    else if (randomNumber1 + randomNumber2 + randomNumber3 < 10) {
                        cout << "Unlucky! It's Xiu" << endl;
                        tienCuoc -= i;
                        cout << "Your money is now: " << tienCuoc << endl;
                    }
                }
                else if (taixiu == "Xiu") {
                    if (randomNumber1 + randomNumber2 + randomNumber3 >= 10) {
                        cout << "Unlucky! It's Tai!" << endl;
                        tienCuoc -= i;
                        cout << "Your money is now: " << tienCuoc << endl;
                    }
                    else if (randomNumber1 + randomNumber2 + randomNumber3 < 10) {
                        cout << "Congrats! It's Xiu!" << endl;
                        tienCuoc += i;
                        cout << "Your money is now: " << tienCuoc << endl;
                    }
                }
                if (tienCuoc <= 0) {
                    cout << "You run out of money you poor loser!" << endl;
                    break;
                }
            }
        }
}
